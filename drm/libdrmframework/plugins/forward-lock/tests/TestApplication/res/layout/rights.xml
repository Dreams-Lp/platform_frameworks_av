<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView android:id="@+id/permissioninfo"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="@string/showing_constraints_for_permission_play"
        android:paddingBottom="20px" />

    <ListView android:id="@android:id/list" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:drawSelectorOnTop="false"
        android:paddingBottom="30px" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttonBackRights" android:text="@string/go_back_to_constraint_type_list_"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
